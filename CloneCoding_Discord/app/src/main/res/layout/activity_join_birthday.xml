<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start.LoginActivity"
    android:orientation="vertical"
    android:padding="20dp">
    <Button
        android:id="@+id/btn_back"
        android:layout_marginBottom="25dp"
        android:background="@drawable/img_backarrow"
        android:backgroundTint="@color/sub_color_gray"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입하기"
        android:fontFamily="@font/discord_bold"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:textSize="12dp"
        android:fontFamily="@font/discord_normal"
        android:layout_marginBottom="5dp"
        />
        <Button
            android:id="@+id/calendar"
            android:padding="10dp"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   2023.06.22." />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/img_delete_id"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유효한 생년월일을 입력해주세요"
        android:textSize="12dp"
        android:textColor="#FF0000"
        android:fontFamily="@font/discord_normal"
        android:layout_marginBottom="10dp"
        />


    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_next"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="다음"/>
</LinearLayout>