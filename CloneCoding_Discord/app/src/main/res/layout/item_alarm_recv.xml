<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/ln_alarm"
    >

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/imgv_alarm"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_profile1"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/imv_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img_check_circle"
                app:tint="@color/green"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/tv_alarm_main"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"/>

        <TextView
            android:id="@+id/tv_alarm_time"
            android:textColor="#717171"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간 or 날짜"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/imb_sandmsg"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_check_circle"
        android:background="@android:color/transparent"
        app:tint="@color/main_color_blue" />
</LinearLayout>